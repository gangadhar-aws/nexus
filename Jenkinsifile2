        // }
        
        
        stage('Docker Login'){
            steps{
             withCredentials([string(credentialsId: 'gangadharbsk', variable: 'dockerpwd2')]) {
                    sh 'docker login -u gangadharbsk -p ${dockerpwd2}'
                    sh 'echo docker login success'
                }
            }
        }
        
        // stage('Push Image'){
