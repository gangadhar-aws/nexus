pipeline{
    agent any
    tools{
        maven 'M2_HOME'
    }

    stages{
        stage('Checkout'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/gangadhar-aws/nexus.git']])
            }
        }

        stage('Build Application'){
            steps{
                sh 'mvn clean install'
            }
            
        }
        
        // stage('Docker Build IMage'){
